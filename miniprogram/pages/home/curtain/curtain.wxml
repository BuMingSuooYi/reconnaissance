<view scroll-y>
  <view class="cu-list menu sm-border">

    <view class="cu-item ">
      <text class=" text-black text-lg ">窗帘名称：</text>
      <view class="content my-card">
        <input placeholder="{{defaultNum.name}}" name="input" bindinput="trackNameInput"> value="{{formCurtain.name}}"</input>
      </view>
    </view>

    <view class="cu-item">
      <view class="title">类型：</view>
      <picker value="{{formCurtain.type}}" range="{{typeList}}" bindchange="typeChange">
        <view class="picker">
          {{formCurtain.type>-1?typeList[formCurtain.type]:'选择导轨类型'}}
        </view>
      </picker>
    </view>

    <view class="cu-item ">
      <canvas id="myCanvas" type="2d"></canvas>
    </view>

    <view class="cu-item">
      <text class=" text-black text-lg ">电机位置：</text>
      <checkbox-group class="block" bindchange="electricalChange">
        <view class="cu-form-group">
          <checkbox checked="true" value="0"></checkbox>
          <view class="text">左端</view>
          <checkbox checked="" value="1"></checkbox>
          <view class="text">右端</view>
        </view>
      </checkbox-group>
    </view>

    <view class="cu-item ">
      <text class=" text-black text-lg ">主轨尺寸：</text>
      <view class="cu-form-group">
        <input placeholder="{{defaultNum.mainLineSize}}" name="input" value="{{formCurtain.mainLineSize}}" bindinput="mainLineInput"></input>
        <text class="">(米)</text>
      </view>
    </view>

    <view class="cu-item" wx:if="{{formCurtain.type==1||formCurtain.type==3}}">
      <text class=" text-black text-lg ">左轨尺寸：</text>
      <view class="cu-form-group">
        <input placeholder="{{defaultNum.leftLineSize}}" name="input" value="{{formCurtain.leftLineSize}}" bindinput="leftLineInput"></input>
        <text class="">(米)</text>
      </view>
    </view>

    <view class="cu-item" wx:if="{{formCurtain.type==2||formCurtain.type==3}}">
      <text class=" text-black text-lg ">右轨尺寸：</text>
      <view class="cu-form-group">
        <input placeholder="{{defaultNum.rightLineSize}}" name="input" value="{{formCurtain.rightLineSize}}" bindinput="rightLineInput"></input>
        <text class="">(米)</text>
      </view>
    </view>


    <view class="cu-item ">
      <view class="cu-btn round bg-cyan" catchtap="saveTrack">确定添加</view>
    </view>


  </view>


</view>