.my_badge {
  position: relative;
  padding-left: 0rpx; /* Add padding to create space for the badge */
}

.my_badge::before {
  content: '';
  position: absolute;
  top: -30rpx; /* Adjust the value as needed */
  left: -30rpx; /* Adjust the value as needed */
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 0rpx 0rpx 30rpx 30rpx;
  border-color: #FF0000 transparent  transparent  #FF0000;
}

