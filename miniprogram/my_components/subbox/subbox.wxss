/* component/subbox.wxss */
view{
	margin: 0rpx;
	padding: 0rpx;
	box-sizing: border-box;
}


.subbox{
	width: 300rpx;
	height: 300rpx;
	margin: 10rpx;
	background-color: rgb(95, 81, 60);
	border-radius: 8rpx;
	box-shadow: 8rpx 8rpx 8rpx rgba(0, 0, 0, 0.5);/*阴影*/
}

.content{
	width: 300rpx;
	height: 300rpx;
	padding: 10rpx 0rpx;
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
  align-items: center; 
}

/* 6键 */
.switch-6{
	width: 30%;	
	height: 50%;
	padding: 20rpx 0rpx;
	margin: 0rpx 4rpx;
	border-right: 5rpx solid black;
}
.switch-6:nth-child(3){
	border-right:none ;
}
.switch-6:last-child{
	border-right:none ;
}

